<div class="container" style="margin: 100px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Editar</h4>
            <form action="/admin/productos/editar" method="post" enctype="multipart/form-data">
                <input type="hidden" value="{{producto.id}}" name="id">
                <div class="mb-3 row">
                    <p>Nombre</p>
                    <input class="form-control" placeholder="Nombre" name="nombre" value="{{producto.nombre}}">
                </div>
                <div class="mb-3 row">
                    <p>Precio</p>
                    <input class="form-control" placeholder="Precio" name="precio" value="{{producto.precio}}">
                </div>
                <div class="mb-3 row">
                    <p>Descripción</p>
                    <input class="form-control" placeholder="Descripción" name="descripcion" value="{{producto.descripcion}}" />
                </div>
                <div class="form-group">
                    <p>
                        <label>Imagen: <input type="file" name="imagen" id="imagen"/></label>
                    </p>
                    <p>
                        <label><input type="checkbox" name="img_delete" id="img_delete" value="1">Eliminar imagen actual?</label>
                        <input type="hidden" name="img_original" value="{{producto.id_imagen}}">
                    </p>
                </div>
                <div style="display:flex; justify-content:space-between">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                    <button class="btn btn-danger" onclick="location.href= '/admin/productos'" type="button">Cancelar</button>
                </div>
            </form>
        </div>
    </div>
</div>
{{#if error}}
    <h5>{{message}}</h5>
{{/if}}