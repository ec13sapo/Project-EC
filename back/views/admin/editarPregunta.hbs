<div class="container" style="margin: 100px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Editar</h4>
            <form action="/admin/preguntas/editar" method="post">
                <input type="hidden" value="{{pregunta.id}}" name="id">
                <div class="mb-3 row">
                    <p>{{pregunta.pregunta}}</p>
                    <textarea class="form-control" placeholder="Pregunta" name="pregunta"></textarea>
                </div>
                <div class="mb-3 row">
                    <p>{{pregunta.respuesta}}</p>
                    <textarea class="form-control" placeholder="Respuesta" name="respuesta"></textarea>
                </div>
                <div style="display:flex; justify-content:space-between">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                    <button class="btn btn-danger" onclick="location.href= '/admin/preguntas'" type="button">Cancelar</button>
                </div>
            </form>
        </div>
    </div>
</div>
{{#if error}}
    <h5>{{message}}</h5>
{{/if}}