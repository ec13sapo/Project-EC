<div class="container" style="margin-top: 50px">
    {{!--fila 1 --}}
    <div class="row">
        <p class="text-start"><a class="btn btn-success" href="/admin/mainAdmin">Home</a></p>
        <p class="text-end">Hola {{usuario}}! <a class="btn btn-danger" href="/admin/login/logout">Cerrar sesi√≥n <i class="fas fa-sign-out-alt"></i></a></p>
    </div>
    {{!--fin fila 1--}}
        {{!--fila 2--}}
        <div class="row">
            <div class="col-7">
                <h3>Productos</h3>
            </div>
            <div class="col-5 text-end">
                <a href="/admin/productos/agregar" class="btn btn-success"><i class="fa fa-plus"></i> Nuevo</a>
            </div>
        </div>
        {{!--fin fila 2--}}
    {{!--fila 3--}}
        <div class="row">
            <div class="col">
                <table class="table">
                    <thead>
                        <tr class="table-dark">
                            <th scope="col">#</th>
                            <th scope="col">Imagen</th>
                            <th scope="col">Producto</th>
                            <th scope="col">Precio</th>
                            <th class="text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each productos}}
                        <tr>
                            <th scope="row">{{id}}</th>
                            <td>{{{imagen}}}</td>
                            <td>{{nombre}}</td>
                            <td>${{precio}}</td>
                            <td class="text-center">
                                <a href="/admin/productos/editar/{{id}}" title="Editar" class="btn btn-sm btn-secondary"><i class="fa fa-pencil"></i></a>
                                <a href="/admin/productos/eliminar/{{id}}" title="Eliminar" class="btn btn-sm btn-secondary"><i class="fa fa-trash"></i></a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    {{!--fin fila 3--}}
</div>