<div class="container" style="margin: 100px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Agregar un nuevo Producto</h4>
            <form action="/admin/productos/agregar" method="post" enctype="multipart/form-data">
                <div class="mb-3 row">
                    <input type="text" class="form-control" placeholder="Nombre" name="nombre">
                </div>
                <div class="mb-3 row">
                    <input type="text" class="form-control" placeholder="Precio" name="precio">
                </div>
                <div class="mb-3 row">
                    <textarea class="form-control" placeholder="Descripcion" name="descripcion"></textarea>
                </div>
                <div class="form-group">
                    <label>Imagen: <input type="file" name="imagen" id="imagen"/></label>
                </div>
                <div style="display:flex; justify-content:space-between">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                    <button class="btn btn-danger" onclick="location.href= '/admin/productos'" type="button">Cancelar</button>
                </div>
            </form>
        </div>
    </div>
</div>
{{#if error}}
    <h5>{{message}}</h5>
{{/if}}